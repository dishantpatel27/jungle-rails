<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
  <section class="cart-show">
  
  <div>
  <%= @order.email %>
  </div>
  
    <header class="page-header">
      <h1>My Order</h1>
    </header>
    
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_total = 0 %>
          <% @order.line_items.each do |elem| %>
            <%= render 'item', product_id: elem.product_id,quantity: elem.quantity %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= @cart_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  
    <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  </section>
  
  </body>
</html>